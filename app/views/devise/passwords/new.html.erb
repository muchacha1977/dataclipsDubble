<!--=== Content Part ===-->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <%= form_for(resource, :as => resource_name, :html => {:class => "reg-page"}, :url => registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
 
                <div class="reg-header">
                    <h2>Forgot your password?</h2>
                                  
                </div>
               
                <label>Email Address <span class="color-red">*</span></label>
                 <%= f.email_field :email, :autofocus => true,  :class =>"form-control margin-bottom-20" %>

             
                <hr>

                <div class="row">
                    <div class="col-lg-6">
                        <p><%= link_to "Sign Up", new_registration_path(resource_name), class:"color-green" %> for free.</p>                  
                    </div>
                    <div class="col-lg-6 text-left">
                        <%= f.submit "Send me reset password instructions" ,:class => "btn-u pull-right"  %>
                                            
                    </div>
                </div>
                
           <% end %>
        </div>
    </div>
</div><!--/container-->    
