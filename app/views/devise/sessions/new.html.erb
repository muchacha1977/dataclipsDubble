
<!--=== Content Part ===-->
<div class="container">		
	<div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <%= form_for(resource, :html => {:class => "reg-page"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                <div class="reg-header">            
                    <h2>Login to your account</h2>
                </div>
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="icon-user"></i></span>
                    <!--<input type="text" placeholder="Username" class="form-control">-->
                    <%= f.email_field :email, :autofocus => true , :placeholder => "Email" , :class =>"form-control" %>
                </div>                    
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="icon-lock"></i></span>
                    <%= f.password_field :password,  :placeholder => "Password" , :class =>"form-control" %>    
                </div>                    

                <div class="row">
                    <div class="col-md-6">
                        <!--<label class="checkbox"><input type="checkbox"> Stay signed in</label>  --> 
                         <% if devise_mapping.rememberable? -%>
					    <div> <label class="checkbox"><%= f.check_box :remember_me %>Stay signed in</div>
					    <% end -%>
                     
                    </div>
                    <div class="col-md-6">
                        <%= f.submit "Sign in" ,:class => "btn-u pull-right"  %>                      
                    </div>
                </div>
                <hr>
                <h4>No Account ?</h4>
                <p><%= link_to "Sign Up", new_registration_path(resource_name), class:"color-green" %> for free.</p>
                <hr>
                <h4>Forget your Password ?</h4>
                <p>no worries, <%= link_to "click here", new_password_path(resource_name), class:"color-green" %> to reset your password.</p>
            <% end %>
        </div>
    </div><!--/row-->
</div><!--/container-->		
<!--=== End Content Part ===--> 
