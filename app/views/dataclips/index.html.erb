<div class="container" style="height:800px">  
<div class="panel panel-green margin-bottom-40">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="icon-user"></i> Basic Table Option (with space)</h3>
        </div>
        <div class="panel-body">
          <table class="table">
            <thead>
              <tr>
               <th>Db connection</th>
              <th>Title</th>
              <th>Statement</th>
              <th>User</th>
              <th></th>
              <th></th>
              <th></th>
              </tr>
            </thead>
            <tbody>
            <% @dataclips.each do |dataclip| %>
            <tr>

              <td><h1><%= dataclip.db_connection_id %></h1></td> 
              <td><%= dataclip.title %></td>
              <td><%= dataclip.statement %></td>
              <td><%= dataclip.user_id %></td>
              <td><%= link_to 'Show', dataclip %></td>
              <td><%= link_to 'Edit', edit_dataclip_path(dataclip) %></td>
              <td><%= link_to 'Destroy', dataclip, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            </tr>
            <% end %>
          </tbody>
          </table>
        </div>            
      </div>
      <div class="btn btn-success btn-xs">
        <i class="icon-ok"></i>
      <%= link_to "New Dataclip" , new_dataclip_path  %>
     
    </div>
      </div>















