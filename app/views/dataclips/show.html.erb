<p id="notice"><%= notice %></p>

<p>
  <strong>Db connection:</strong>
  <%= @dataclip.db_connection.title %>
</p>

<p>
  <strong>Title:</strong>
  <%= @dataclip.title %>
</p>

<p>
  <strong>Statement:</strong>
  <%= @dataclip.statement %>
</p>

<p>
  <strong>Link:</strong>
  <%= "#{show_url}?id=#{@dataclip.link_token}" %>
</p>

<% p @dataset.class %>

<% if @dataset.any? %>
<table class="table table-striped">
<thead>
<tr>
  <% @dataset.first.keys.each do |column| %>
  <td><%= "#{column}" %></td>
  <% end %>
</tr>
<% @dataset.first do |row| %>
  <tr>
  <% row.each do |key| %>
    <td><%= key %></td> 
  <% end %>
  </tr>
<% end %>
</thead>
<tbody>
<% @dataset.each do |row| %>
	<tr>
	<% row.each do |key, value| %>
		<td><%= value %></td> 
	<% end %>
	</tr>
<% end %>
</tbody>
</table>
<% end %>

<%= link_to 'Edit', edit_dataclip_path(@dataclip) %> |
<%= link_to 'Back', dataclips_path %>
