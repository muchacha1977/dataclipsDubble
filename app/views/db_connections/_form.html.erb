                    <div class="col-lg-6 text-right">

                        <!--%= f.submit "Create DB Conention" ,:class => "btn-u pull-right"  %>
                                            
                    </div>
                </div-->

           <% end %>
        </div>
   </div>
</div><!--/container-->   
